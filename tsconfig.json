{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": ".",           // now the project root
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "types": ["node"],
    "baseUrl": ".",           // paths start from repo root
    "paths": {
      "@/*": ["*"]            // `@/app/api/...` â†’ `app/api/...`, etc.
    }
  },
  "include": [
    "app/**/*",
    "db/**/*",
    "lib/**/*",
    "models/**/*",
    "index.ts"                // your entrypoint
  ]
}
