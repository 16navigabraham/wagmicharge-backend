{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./backend",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "types": ["node"],
    "skipLibCheck": true,
    // REMOVE baseUrl/paths OR point baseUrl to repo root:
    "baseUrl": ".",
    // You can keep aliasing if you adjust paths to point into backend:
    "paths": {
      "@/*": ["/*"]
    }
  }
}
